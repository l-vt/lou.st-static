@import "https://fonts.googleapis.com/css2?family=Rubik:wght@400;700&display=swap"
@import "https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.5.5/css/simple-line-icons.min.css"

body
  background #FFF
  color #050505
  font-family "Rubik", Arial, Helvetica, sans-serif
  font-size 22px


a
  color #457b9d
  text-decoration none

@media (prefers-color-scheme: dark)
  body
    background #111
    color #FFF
  a
    color #58a8db

.container
  max-width 1100px
  margin 0 auto
  width 100%
  padding 1rem
  box-sizing border-box

section
  padding 1rem 0
  box-sizing border-box
  line-height 2rem
  ul.flex
    display flex
    flex-wrap wrap
    li
      padding 0 1em 0 0
  ul
    margin 0
    padding 0
    li
      margin-bottom 1em
      list-style none
      a
        font-size 0.8em
        display inline-block
      >*
        font-size 0.9em
      p
        display block
      ul
        margin-left 1em
        li
          margin-bottom unset
  h1
    margin 0
    padding 0
    margin-bottom 1em
    font-size 1em
    font-weight 700
    display flex
    align-items center
    i
      margin-right 0.5em
  &.intro
    font-size 1.5em
    font-weight 400
    span.lower
      display inline-block
      animation moveUp
      animation-duration 2s
  p
    padding 0
    margin 0
    font-size 20px

.m::before
  content "work@lou.st" 

@keyframes moveUp {
  0% {
    transform translateY(0.65em)
    opacity 0
  }
  25% {
    transform translateY(0.65em)
    opacity 0
  }
  100% {
    transform translateY(0em)
    opacity 1
  }
}